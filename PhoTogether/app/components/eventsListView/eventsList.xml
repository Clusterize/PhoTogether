<Page loaded="onPageLoaded" xmlns="http://schemas.nativescript.org/tns.xsd" actionBarHidden="true">
	<GridLayout rows="auto, *">
        <Label text="Calendar Events" fontSize="28" textAlignment="center" row="0" />
    	<ListView items="{{ eventsList }}" itemTap="eventTap" row="1" verticalAlignment="stretch">
            <ListView.itemTemplate>
                <GridLayout columns="*, *" rows="*, *, * , *">
                    <Label text="{{ title }}" fontSize="24" textAlignment="center" row="0" colSpan="2"  />	
                    <Label text="Start Date" row="1" col="0"  />
                    <Label text="End Date" row="1" col="1"  />
                    <Label text="{{ startDate }}" row="2" col="0"  />
                    <Label text="{{ endDate }}" row="2" col="1"  />
                    <Label text="{{ location ? 'Location: ' + location : 'No location' }}" textAlignment="center" row="3" colSpan="2"  />
                </GridLayout>
            </ListView.itemTemplate>
    	</ListView>
    </GridLayout>
</Page>
